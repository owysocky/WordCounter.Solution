@{
  Layout = "_Layout";
}

<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Counter!</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Word Counter</h1>
      </div>
    <form action="/repeatcouner" method="post">
      <label for="word">Enter the word you want to find:</label>
      <input id="word" name="word" type="text">
      <br>
      <label for="sentence">Enter the sentence you want to search:</label>
      <input id="sentence" name="sentence" type="text">
      <br>
      <button type="submit">Submit</button>
    </form>
  </div>
  </body>
</html>
